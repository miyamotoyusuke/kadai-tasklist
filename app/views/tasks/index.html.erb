<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table clss ="table table-sprited">
    <therd>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>状態</th>
      </tr>
    </therd>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
    

<%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary"  %>